@model Postworthy.Models.Account.PostworthyUser
@{
    ViewBag.Title = "Personalization";
    ViewBag.Account = true;
}
<style type="text/css">
#About
{
    width:550px;
    height:150px;
}
#AnalyticsScript
{
    width:550px;
    height:150px;
}
#AdScript
{
    width:550px;
    height:150px;
}
#MobileAdScript
{
    width:550px;
    height:150px;
}
</style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Site Personalization</legend>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.SiteName)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.SiteName)
                @Html.ValidationMessageFor(model => model.SiteName)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.About)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.About)
                @Html.ValidationMessageFor(model => model.About)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.AnalyticsScript)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.AnalyticsScript)
                @Html.ValidationMessageFor(model => model.AnalyticsScript)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.AdScript)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.AdScript)
                @Html.ValidationMessageFor(model => model.AdScript)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.MobileAdScript)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.MobileAdScript)
                @Html.ValidationMessageFor(model => model.MobileAdScript)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.IncludeFriends)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.IncludeFriends)
                @Html.ValidationMessageFor(model => model.IncludeFriends)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.OnlyTweetsWithLinks)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.OnlyTweetsWithLinks)
                @Html.ValidationMessageFor(model => model.OnlyTweetsWithLinks)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.RetweetThreshold)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.RetweetThreshold)
                @Html.ValidationMessageFor(model => model.RetweetThreshold)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(model => model.Track)
            </div>
            <div class="controls">
                @Html.EditorFor(model => model.Track)
                @Html.ValidationMessageFor(model => model.Track)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </fieldset>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
