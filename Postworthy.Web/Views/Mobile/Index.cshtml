@model List<Postworthy.Models.Twitter.ITweet>
@{
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
    ViewBag.Title = ViewBag.Brand ?? "Postworthy";
    ViewBag.Home = true;
}
<style>
    .profile-image-small
    {
        width: 25px;
        height: 25px;
        float: left;
        padding-right: 3px;
        padding-bottom: 5px;
    }
    .tweet-info
    {
        height: 25px;
        float: left;
        font-size: 10px;
        padding-bottom: 5px;
        line-height: 12px;
    }
    .btn-tweet
    {
        float: right;
        margin: 5px 0px 5px 0px;
    }
    #characterCount
    {
        float: right;
        font-size: 16px;
        font-weight: bold;
        color: #ccc;
        line-height: 28px;
        padding-right: 4px;
        margin: 5px 0px 5px 0px;
    }
    .box
    {
        border-top: 4px solid #DCB;
    }
    .box a
    {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
    .colFull
    {
        width: 100%;
    }
    .newest
    {
        background-color: #E6F0F5;
    }
    .top10
    {
        font-family: bold;
    }
    .top20
    {
        font-weight: bold;
    }
    .top30
    {
        font-weight: bold;
    }
    .postIndex
    {
        float: right;
        font-size: 16px;
        font-weight: bold;
        color: #ccc;
        line-height: 28px;
        padding-right: 4px;
    }
</style>
<script src="@Url.Content("~/Scripts/jquery.masonry.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $('[data-role=page]').live('pageshow', function (event, data) {
        try {
            $('#scroller ul').imagesLoaded(function () {
                $('.tweet-image-div').css('max-height', '100px').css('height', 'auto');
                iScrollLoaded();
            });
        } catch (err) {

        }

    });
</script>
@using (Ajax.BeginForm("Refresh", null, new AjaxOptions { InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace, UpdateTargetId = "scrollerItems" }, new { id = "refreshForm"}))
{ 
}
<div id="wrapper">
    <div id="scroller">
        <div id="pullDown">
            <span class="pullDownIcon"></span><span class="pullDownLabel">Pull down to refresh...</span>
        </div>
        <ul id="scrollerItems">
            @{ Html.RenderPartial("_ItemsList", Model); }
        </ul>
    </div>
</div>
