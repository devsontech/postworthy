                    $(this).attr("href", "javascript:$.mobile.changePage('" + uri + "');");
                }
            });
            */
        } catch (err) {

        }
    });
</script>
<div id="wrapper">
    <div id="scroller">
        <div id="pullDown">
            <span class="pullDownIcon"></span><span class="pullDownLabel">Pull down to refresh...</span>
        </div>
        <ul id="scrollerItems">
            @{ Html.RenderPartial("_ItemsList", Model); }
        </ul>
    </div>
</div>
